<div class="feature-wrapper bg-primary pt-5 pb-5 mt-5 mt-lg-2">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"> Sign Up</h1>
        <% include ./partials/messages %>
        
          <form action="/users/register" method="POST">
          
            <div class="form-group">
            
              <label for="name">Username</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Input the usernmae"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Input the vaild email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Input the password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Input the confirm password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Register Now</button>
        </form>
        <p class="lead mt-4">I have an account, login now! <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>
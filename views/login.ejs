<div class="feature-wrapper bg-primary pt-5 pb-5 mt-5 mt-lg-2">
  <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">Login</h1>
        <% include ./partials/messages %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Input the email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Input the password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Login Now</button>
        </form>
        <p class="lead mt-4">I have not the account, register now! <a href="/users/register">Register</a>
        </p>
      </div>
    </div>
  </div>